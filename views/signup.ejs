<body>
  <form action="/signup" method="post" novalidate class="needs-validation col-8 offset-2">
    <div class="row">
      <div>
        <h3>Sign up now</h3>
        <div class="mb-4">
          <label for="username" class="form-label">Username:</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Invalid username</div>
        </div>
      </div>
      <div>
        <div class="mb-4">
          <label for="password" class="form-label">Password:</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a password</div>

        </div>
      </div>
      
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
  </form>
</body>
